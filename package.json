  "license": "MIT",
  "bugs": {
    "url": "https://github.com/graphql-dotnet/relay/issues"
  },
  "homepage": "https://github.com/graphql-dotnet/relay#readme",
  "devDependencies": {
    "chalk": "^1.1.3",
    "lodash": "^4.17.19",
    "rimraf": "^2.5.4",
    "semver": "^7.5.2",
    "shells": "^2.0.0",
    "yargs": "^6.4.0"
  },
  "dependencies": {
    "fs-extra": "^4.0.1"
  }
}
